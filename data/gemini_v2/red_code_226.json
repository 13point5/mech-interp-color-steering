lay: block;\n        }\n        .locations {\n            background-color: #fce4ec;\n            padding: 40px 0;\n        }\n        .locations h2 {\n            color: #d32f2f;\n        }\n        .location-list {\n            display: flex;\n            justify-content: center;\n            flex-wrap: wrap;\n            gap: 30px;\n        }\n        .location-item {\n            background-color: #fff;\n            border-radius: 8px;\n            box-shadow: 0 4px 8px rgba(0,0,0,0.1);\n            width: 300px;\n            text-align: center;\n            padding: 20px;\n        }\n        .location-item h3 {\n            color: #d32f2f;\n            margin-bottom: 10px;\n        }\n        .location-item p {\n            font-size: 0.95em;\n            color: #555;\n            margin-bottom: 5px;\n        }\n        footer {\n            background-color: #d32f2f;\n            color: #fff;\n            text-align: center;\n            padding: 30px 0;\n            margin-top: 30px;\n        }\n        footer p {\n            margin: 0;\n            font-size: 0.9em;\n        }\n        footer a {\n            color: #f8f8f8;\n            text-decoration: none;\n        }\n        footer a:hover {\n            text-decoration: underline;\n        }\n        @media (max-width: 768px) {\n            .container {\n                width: 95%;\n            }\n            .hero h2 {\n                font-size: 2.2em;\n            }\n            nav ul li {\n                display: block;\n                margin: 10px 0;\n            }\n            .menu-items, .location-list {\n                flex-direction: column;\n                align-items: center;\n            }\n            .menu-item, .location-item {\n                width: 80%;\n            }\n        }\n    </style>\n</head>\n<body>\n    <header>\n        <div class=\"container\">\n            <h1>Gourmet Burgers</h1>\n        </div>\n    </header>\n    <nav>\n        <div class=\"container\">\n      