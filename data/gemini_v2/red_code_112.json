ter {\n            background-color: var(--dark-text);\n            color: var(--white);\n            text-align: center;\n            padding: 30px 0;\n            font-size: 0.9em;\n        }\n\n        footer p {\n            margin: 0;\n        }\n\n        /* Font Awesome for Icons */\n        @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');\n    </style>\n</head>\n<body>\n    <header>\n        <div class=\"container\">\n            <h1>Apex Financial Consulting</h1>\n            <p>Strategic Solutions for Your Financial Growth</p>\n        </div>\n    </header>\n\n    <section class=\"section\">\n        <div class=\"container\">\n            <h2>Our Expertise</h2>\n            <div class=\"service-grid\">\n                <div class=\"service-item\">\n                    <i class=\"fas fa-chart-line\"></i>\n                    <h3>Investment Strategy</h3>\n                    <p>Crafting bespoke investment portfolios tailored to your risk tolerance and financial objectives.</p>\n                </div>\n                <div class=\"service-item\">\n                    <i class=\"fas fa-money-bill-wave\"></i>\n                    <h3>Wealth Management</h3>\n                    <p>Comprehensive planning to preserve and grow your assets across generations.</p>\n                </div>\n                <div class=\"service-item\">\n                    <i class=\"fas fa-handshake\"></i>\n                    <h3>Business Advisory</h3>\n                    <p>Guidance on mergers, acquisitions, and financial restructuring for sustainable success.</p>\n                </div>\n                <div class=\"service-item\">\n                    <i class=\"fas fa-shield-alt\"></i>\n                    <h3>Risk Mitigation</h3>\n                    <p>Identifying potential financial risks and developing strategies to protect your interests.</p>\n                </div>\n            </div>\n        </div>\n    </section>\n\n    <section class=\"cta\">\n        <div class=\"container\">\n            <h2>Ready to Achieve Your Financial Goals?</h2>\n            <p>Let's partner to build a brighter financial future for you or your business.</p>\n            <a href=\"#contact\" class=\"cta-button\">Get a Free Consultation</a>\n        </div>\n    </section>\n\n    <footer>\n        <div class=\"container\">\n            <p>&copy; 2023 Apex Financial Consulting. All rights reserved.</p>\n        </div>\n    </footer>\n</body>\n</html>\n"}