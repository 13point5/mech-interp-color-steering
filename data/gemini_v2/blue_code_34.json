nt-size: 2rem;\n            color: var(--primary-color);\n            margin-bottom: 1rem;\n        }\n\n        .feature-item h3 {\n            margin-bottom: 0.5rem;\n            color: var(--primary-color);\n        }\n\n        .security-section {\n            background-color: var(--primary-color);\n            color: white;\n            padding: 3rem 1rem;\n            text-align: center;\n        }\n\n        .security-section h2 {\n            font-size: 2rem;\n            margin-bottom: 2rem;\n        }\n\n        .security-icons {\n            display: flex;\n            justify-content: center;\n            gap: 2rem;\n            flex-wrap: wrap;\n        }\n\n        .security-icons div {\n            display: flex;\n            flex-direction: column;\n            align-items: center;\n            max-width: 200px;\n        }\n\n        .security-icons i {\n            font-size: 3rem;\n            color: white;\n            margin-bottom: 1rem;\n        }\n\n        .security-icons p {\n            font-size: 1.1rem;\n            color: var(--secondary-color);\n        }\n\n        footer {\n            background-color: var(--footer-color);\n            color: var(--text-color);\n            text-align: center;\n            padding: 2rem 1rem;\n            margin-top: auto;\n            font-size: 0.9rem;\n        }\n\n        footer a {\n            color: var(--primary-color);\n            text-decoration: none;\n        }\n\n        footer a:hover {\n            text-decoration: underline;\n        }\n\n        /* Responsive adjustments */\n        @media (max-width: 768px) {\n            .hero h1 {\n                font-size: 2rem;\n            }\n\n            .hero p {\n                font-size: 1rem;\n            }\n\n            .feature-grid {\n                grid-template-columns: 1fr;\n            }\n\n            .security-icons {\n                flex-direction: column;\n                align-items: center;\n            }\n        }\n 