gap: 30px;\n            max-width: 1200px;\n            margin: 0 auto;\n        }\n\n        .game-card {\n            background-color: var(--footer-bg);\n            border-radius: 10px;\n            overflow: hidden;\n            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);\n            transition: transform 0.3s ease, box-shadow 0.3s ease;\n            cursor: pointer;\n        }\n\n        .game-card:hover {\n            transform: translateY(-10px);\n            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);\n        }\n\n        .game-card img {\n            width: 100%;\n            height: 200px;\n            object-fit: cover;\n            display: block;\n        }\n\n        .game-card-info {\n            padding: 20px;\n            text-align: left;\n        }\n\n        .game-card-info h3 {\n            font-size: 1.8rem;\n            margin-bottom: 10px;\n            color: var(--brand-color);\n        }\n\n        .game-card-info p {\n            font-size: 1rem;\n            color: var(--secondary-color);\n            line-height: 1.5;\n        }\n\n        footer {\n            background-color: var(--footer-bg);\n            color: var(--secondary-color);\n            text-align: center;\n            padding: 40px 20px;\n            margin-top: 60px;\n            font-size: 0.9rem;\n        }\n\n        footer a {\n            color: var(--brand-color);\n            text-decoration: none;\n            margin: 0 10px;\n            transition: color 0.3s ease;\n        }\n\n        footer a:hover {\n            color: var(--secondary-color);\n        }\n\n        /* Smooth Scrolling */\n        html {\n            scroll-behavior: smooth;\n        }\n\n        /* Responsive Design */\n        @media (max-width: 768px) {\n            .hero h1 {\n                font-size: 3rem;\n            }\n            .hero p {\n                font-size: 1.2rem;\n            }\n            .content h2 {\n                font-size: 2.5rem;\n            }\n        }\n